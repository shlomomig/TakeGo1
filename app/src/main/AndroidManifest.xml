<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shlomo.takego">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/carrentalicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.AddClientActivity" />
        <activity android:name=".controller.ShowClientsActivity" />
        <activity android:name=".controller.AddCarActivity" />
        <activity android:name=".controller.ShowCarActivity" />
        <activity android:name=".controller.AddModelActivity" />
        <activity android:name=".controller.AddBranchActivity" />
        <activity android:name=".controller.ShowBranchesActivity" />
        <activity android:name=".controller.ShowModelsActivity"></activity>
    </application>

</manifest>